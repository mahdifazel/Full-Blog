<%= form_with model: blog_post do |form|%>
 <% if form.object.errors.any? %>
    <div>
      <% form.object.errors.full_messages.each do |message| %>
      <div><%= message %></div><br>
      <% end %>
    </div>
 <% end %>

 <div>
   <%= form.label :title %>
   <%= form.text_field :title %>
 </div>
 <br>

 <div>
   <%= form.label :body %>
   <%= form.text_area :body %>
 </div>
 <br>

 <%= form.button %>

<%end%>
